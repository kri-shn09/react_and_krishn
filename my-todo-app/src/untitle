import { useRef, useState } from 'react'

import './App.css'

function App() {
  
   const inputElement = useRef([]);
   const warning = useRef();
   const checkBox = useRef([]);

 const handleSubmit = () => {
    // Access values of all inputs
    inputElement.current.forEach((input,i) => {
       if(input.value === "")
       {
           warning.current.className = "text-red-600 text-20 mt-2 block";
       }
       else{
           checkBox.current.forEach( (check,i) =>{
            check.classList.add("bg-green-600")
           } )
       }
    });
  };
   
  return (
    <>
     <div
      className="w-full h-screen flex justify-center items-center flex-col">
        <h1 className='text-3xl font-bold'>What TO Do Today</h1>
        <div className='main-con'>
          <div className="w-full flex items-center justify-start">
          <h1
           className='text-3xl font-bold text-gray-900 inline-block '>
            Today
              </h1>
              <i className="fas fa-sun text-yellow-400 mx-1 text-3xl"></i>
              </div>
              <div
               className="w-full flex justify-center items-center px-1/2 mt-8">
                <div className="w-full h-8 rounded-3xl border-2 border-gray-500">
                  <div className='w-0 bg-green-600 h-full rounded-3xl'></div>
                </div>
               </div>
               <p className=' hidden' 
               ref={warning}
               >Please Fill All the Task</p>

               <form
                className='w-full mt-5 rounded-xl'>
                  <div
                   className="w-full flex justify-between items-center">
                   <div className="grn-icon-box">
                    <div onClick={handleSubmit}
           className='w-5 h-5 rounded-full border-2 border-gray-800 cursor-pointer checkBox
           flex justify-center items-center' ref={check => checkBox.current[0] = check}
              >
            <i className="fas fa-check text-white checkIcon"></i>
           </div>
                   </div>
                    <input  ref={el => inputElement.current[0] = el}
            className='w-full pl-3 py-2 outline-0 '
            type="text"
            placeholder='Add Your Task Here'
            />
                   </div>
                  <div
                   className="w-full flex justify-between items-center">
                   <div className="grn-icon-box h-5">
                    <div
           className='w-5 h-5 rounded-full border-2 border-gray-800 cursor-pointer checkBox 
            flex justify-center items-center' ref={check => checkBox.current[1] = check}
            onClick={handleSubmit}>
            <i className="fas fa-check text-white checkIcon"></i>
           </div>
                   </div>
                    <input ref={el => inputElement.current[1] = el}
            className='w-full pl-3 h-5 outline-0 '
            type="text"
            placeholder='Add Your Task Here'
            />
                   </div>
                  <div
                   className="w-full flex justify-between items-center">
                   <div className="grn-icon-box">
                    <div
           className='w-5 h-5 rounded-full border-2 border-gray-800 cursor-pointer checkBox
            flex justify-center items-center' ref={check => checkBox.current[2] = check}
             onClick={handleSubmit}>
            <i className="fas fa-check text-white checkIcon"></i>
           </div>
                   </div>
                    <input ref={el => inputElement.current[2] = el}
            className='w-full pl-3 py-2 outline-0 '
            type="text"
            placeholder='Add Your Task Here'
            />
                   </div>
                </form>
        </div>
      </div>
    </>
  )
}

export default App
